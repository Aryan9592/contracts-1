{
  "name": "usum-protocol",
  "scripts": {
    "test": "forge test -vvv",
    "test:watch": "forge test --watch -vvv --no-match-path \"**/*.integrated.t.sol\"",
    "coverage": "forge coverage --report lcov",
    "coverage:watch": "watch -p \"**/*.sol\" -c \"yarn coverage\"",
    "sizer": "forge build --sizes",
    "sizer:hardhat": "hardhat size-contracts",
    "deploy": "hardhat deploy",
    "chain": "yarn anvil:start & yarn hardhat deploy --network anvil --reset --tags core,periphery,mockup ; wait",
    "build": "yarn anvil:start & yarn hardhat deploy --network anvil --reset --tags core,periphery ; yarn anvil:stop && yarn hardhat package",
    "clean": "hardhat clean && rm -rf deployments",
    "anvil:start": "dotenv -- bash -c 'anvil --chain-id 31337 -f https://arb-goerli.g.alchemy.com/v2/$ALCHEMY_KEY --fork-block-number 18039527'",
    "anvil:stop": "kill -INT $(pgrep anvil)",
    "repl": "hardhat console --network anvil --config hardhat.repl.config.ts --no-compile"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@gelatonetwork/automate-sdk": "^2.1.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.8.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "@uniswap/smart-order-router": "^3.11.2",
    "@uniswap/v3-periphery": "^1.4.3",
    "@usum-io/hardhat-package": "^0.0.1-dev1",
    "boxen": "^5",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "ethers": "^5.4.7",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.26",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^10.2.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0",
    "watch-cli": "^0.2.3"
  },
  "dependencies": {}
}
